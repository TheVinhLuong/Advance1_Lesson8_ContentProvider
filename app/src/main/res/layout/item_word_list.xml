<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.example.android.recyclerviewexample.data.word.Word"/>
        <variable
            name="imageUrl"
            type="String"/>
        <variable
            name="itemListener"
            type="com.example.android.recyclerviewexample.screen.BaseRecyclerViewAdapter.OnRecyclerViewItemClickListener"/>
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
       
        
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            app:loadImageFromUrl="@{imageUrl}"
            android:id="@+id/imageView"
            />
        <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:text="@{item.word}"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>
</layout>
